<section id="proyek" class="py-20 px-4 md:px-10 relative">
    <div class="max-w-7xl mx-auto">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-end gap-6 mb-8">
            <div class="flex flex-col gap-4 max-w-2xl">
                <h2 class="text-white text-4xl md:text-5xl font-bold leading-tight tracking-tight">Portofolio <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-pink to-brand-orange">Proyek</span></h2>
