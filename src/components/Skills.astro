---
const skills = [
    { name: 'Laravel', type: 'Framework', level: 95, icon: 'code_blocks', color: 'pink' },
    { name: 'PHP', type: 'Bahasa', level: 95, icon: 'terminal', color: 'purple' },
    { name: 'Python', type: 'Bahasa', level: 90, icon: 'data_object', color: 'orange' },
    { name: 'Golang', type: 'Bahasa', level: 85, icon: 'speed', color: 'blue' },
    { name: 'React', type: 'Frontend', level: 88, icon: 'code', color: 'pink' },
    { name: 'MySQL', type: 'Database', level: 90, icon: 'database', color: 'orange' },
];

const colorClasses = {
    pink: { text: 'text-brand-pink', bg: 'bg-brand-pink/10', border: 'border-brand-pink/20', gradient: 'from-brand-pink to-brand-orange' },
    purple: { text: 'text-brand-purple', bg: 'bg-brand-purple/10', border: 'border-brand-purple/20', gradient: 'from-brand-purple to-brand-pink' },
    orange: { text: 'text-brand-orange', bg: 'bg-brand-orange/10', border: 'border-brand-orange/20', gradient: 'from-brand-orange to-brand-pink' },
    blue: { text: 'text-brand-blue', bg: 'bg-brand-blue/10', border: 'border-brand-blue/20', gradient: 'from-brand-blue to-brand-purple' },
};
---

<section id="keahlian" class="py-20 px-4 md:px-10 relative">
    <div class="max-w-5xl mx-auto flex flex-col gap-10">
        <div class="flex flex-col items-center text-center space-y-4">
            <div class="inline-flex items-center justify-center gap-2 px-3 py-1 rounded-full bg-brand-orange/10 border border-brand-orange/20 text-brand-orange text-xs font-bold tracking-widest uppercase mb-2">
                <span class="w-2 h-2 rounded-full bg-brand-orange animate-pulse"></span>Kemampuan Sistem
            </div>
            <h2 class="text-4xl md:text-5xl font-bold tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-white via-brand-pink to-brand-blue">KEAHLIAN TEKNIS</h2>
            <p class="text-slate-400 text-lg max-w-2xl font-light">Koleksi alat, bahasa pemrograman, dan teknologi terpilih yang saya gunakan untuk merancang pengalaman digital masa depan.</p>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 pt-6">
            {skills.map((skill) => {
                const colors = colorClasses[skill.color as keyof typeof colorClasses];
                return (
                    <div class="group glass-card p-6 rounded-xl flex flex-col gap-4 hover:-translate-y-2 transition-all duration-300">
                        <div class="flex items-start justify-between">
                            <div class="flex items-center gap-4">
                                <div class="p-3 rounded-xl bg-gradient-to-br from-surface-dark to-brand-bg border border-slate-700/50">
                                    <span class={`material-symbols-outlined ${colors.text} text-2xl`}>{skill.icon}</span>
                                </div>
                                <div>
                                    <h3 class="text-white font-bold text-lg">{skill.name}</h3>
                                    <span class={`${colors.text} text-[10px] font-bold tracking-widest uppercase ${colors.bg} px-2 py-0.5 rounded-full`}>{skill.type}</span>
                                </div>
                            </div>
                        </div>
                        <div class="space-y-2 pt-2">
                            <div class="flex justify-between text-xs text-slate-400 font-medium">
                                <span>Penguasaan</span>
                                <span class="text-white">{skill.level}%</span>
                            </div>
                            <div class="h-2 w-full bg-brand-bg rounded-full overflow-hidden">
                                <div class={`h-full bg-gradient-to-r ${colors.gradient} rounded-full`} style={`width: ${skill.level}%`}></div>
                            </div>
                        </div>
                    </div>
                );
            })}
        </div>
    </div>
</section>
