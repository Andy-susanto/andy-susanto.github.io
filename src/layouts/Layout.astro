---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "sukangoding.id - Portofolio",
  description = "Portofolio sukangoding.id - Fullstack Developer yang memadukan estetika desain dengan kode berkinerja tinggi."
} = Astro.props;
---

<!DOCTYPE html>
<html class="dark" lang="id">
<head>
    <meta charset="utf-8"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport"/>
    <title>{title}</title>
    <meta name="description" content={description}/>
    <link href="https://fonts.googleapis.com" rel="preconnect"/>
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect"/>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&family=Noto+Sans:wght@400;500;700&display=swap" rel="stylesheet"/>
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght,FILL@100..700,0..1&display=swap" rel="stylesheet"/>
</head>
<body class="bg-brand-bg font-display text-white selection:bg-brand-pink selection:text-white">
<div class="relative flex min-h-screen flex-col overflow-hidden bg-brand-bg">
    <div class="absolute inset-0 z-0 bg-grid pointer-events-none"></div>
    <div class="absolute top-0 right-0 z-0 h-[600px] w-[600px] translate-x-1/3 -translate-y-1/3 bg-brand-pink opacity-20 blur-[120px] rounded-full"></div>
    <div class="absolute bottom-0 left-0 z-0 h-[500px] w-[500px] -translate-x-1/3 translate-y-1/3 bg-brand-orange opacity-10 blur-[100px] rounded-full"></div>

    <slot />

</div>

<script>
    // Mobile menu toggle
    document.getElementById('mobile-menu-btn')?.addEventListener('click', function() {
        const menu = document.getElementById('mobile-menu');
        menu?.classList.toggle('hidden');
    });
    // Close mobile menu when clicking a link
    document.querySelectorAll('#mobile-menu a').forEach(link => {
        link.addEventListener('click', () => {
            document.getElementById('mobile-menu')?.classList.add('hidden');
        });
    });

    function sendToWhatsapp(e: Event) {
        e.preventDefault();
        const name = (document.getElementById('name') as HTMLInputElement)?.value;
        const email = (document.getElementById('email') as HTMLInputElement)?.value;
        const message = (document.getElementById('message') as HTMLTextAreaElement)?.value;
        
        let fullMessage = `Halo, nama saya ${name}`;
        if (email) fullMessage += ` (${email})`;
        fullMessage += `. ${message}`;
        
        const url = `https://wa.me/6282287106193?text=${encodeURIComponent(fullMessage)}`;
        window.open(url, '_blank');
    }

    // Expose to window for form
    (window as any).sendToWhatsapp = sendToWhatsapp;
</script>
</body>
</html>
